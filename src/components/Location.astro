---
import { useTranslations } from "../i18n/utils";

const { currentLang = 'en' } = Astro.props;
const t = useTranslations(currentLang);
---
<section
  id="location"
  class="w-full py-12 px-4 bg-[var(--color-warm-sand)] text-center shadow-md"
>
  <div class="max-w-6xl mx-auto">
    <h2 class="text-3xl font-bold mb-8 text-[var(--color-terracotta)]">
      {t.location.title}
    </h2>
    <div class="flex flex-col md:flex-row gap-8 items-center">
     <iframe src="https://www.google.com/maps/embed?pb=!1m17!1m12!1m3!1d3492.2484613630654!2d-13.706560290623267!3d28.920672975406486!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m2!1m1!2zMjjCsDU1JzE0LjQiTiAxM8KwNDInMTQuMyJX!5e0!3m2!1sth!2ses!4v1772154038988!5m2!1sth!2ses" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
      <div data-duration="700" data-animate="fade-right" class="opacity-0 translate-x-10 w-full md:w-1/2 text-left relative">
        <h3 class="text-xl font-medium mb-2 text-[var(--color-atention)]">
          Malai Thai Massage Lanzarote
        </h3>
        <p class="mb-4 leading-relaxed text-[var(--color-deep-charcoal)]">
          {t.location.address}
        </p>
        <h4 class="text-[var(--color-atention)] mb-2 font-medium">
          {t.location.hours}
        </h4>
        <p class="text-[var(--color-deep-charcoal)]">
          {t.location.schedule}
        </p>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes pulseSlow {
    0%,
    100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.9;
      transform: scale(1.2);
    }
  }

  .animate-pulse-slow {
    animation: pulseSlow 4s ease-in-out infinite;
  }
</style>
